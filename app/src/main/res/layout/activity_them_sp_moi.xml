<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Them_SP_Moi_Activity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Nhập Hàng Mới"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSpThemMoi"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/editTextMaSanPhamThemMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgSpThemMoi"
            android:hint="Mã sản phẩm"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/editTextTenSanPhamThemMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMaSanPhamThemMoi"
            android:hint="Tên sản phẩm"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextSoLuongSanPhamThemMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTenSanPhamThemMoi"
            android:hint="Số lượng sản phẩm"
            android:inputType="textPersonName"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editTextGiaSanPhamThemMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextSoLuongSanPhamThemMoi"
            android:hint="Giá nhập sản phẩm"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/editTextGiaSanPhamThemMoi">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:layout_weight="1"
                android:id="@+id/btnThemSPMoiVaoKho"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:layout_weight="1"
                android:id="@+id/btnHuyThemSPMoi"/>
        </LinearLayout>

        <Button
            android:layout_toRightOf="@+id/imgSpThemMoi"
            android:id="@+id/btnThemanhMoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm ảnh" />
    </RelativeLayout>
</LinearLayout>