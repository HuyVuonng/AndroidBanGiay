<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tensptrongkhonsptrongkhoXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Tên sảm phẩm"
            android:textAllCaps="true"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/giaspsptrongkhoXuat"
            android:layout_toRightOf="@+id/tensptrongkhonsptrongkhoXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Gia"
            android:textAllCaps="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/masptrongkhoXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tensptrongkhonsptrongkhoXuat"
            android:layout_marginLeft="80dp"
            android:text="Mã sảm phẩm"
            android:textAllCaps="true"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/soluongsptrongkhoXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tensptrongkhonsptrongkhoXuat"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/masptrongkhoXuat"
            android:text="SL:"
            android:textAllCaps="true"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/btnXuatSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_plus"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>