    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtTimKiem"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm...."
            android:inputType="textPersonName"

            />

        <Button
            android:id="@+id/btnTimKiemhangTRongKho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="Tìm" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btnTimKiemhangTRongKho"
            android:layout_alignParentRight="true">

            <RadioButton
                android:id="@+id/rdoGiaGiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cao đến thấp"/>
            <RadioButton
                android:id="@+id/rdoGiaTang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá thấp đến cao"/>
        </RadioGroup>

    </RelativeLayout>

    <ListView
        android:id="@+id/lvloaigiay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:scrollbars="vertical"></ListView>
</LinearLayout>