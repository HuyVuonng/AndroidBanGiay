<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaSP_Activity"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Sửa thông tin Sp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSpSua"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <EditText
            android:layout_below="@+id/imgSpSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"
            android:id="@+id/editTextTenSanPhamSua"
            android:inputType="textPersonName"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editTextSoLuongSanPhamSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTenSanPhamSua"
            android:hint="Số lượng sản phẩm"
            android:inputType="number"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/editTextSoLuongSanPhamSua">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:layout_weight="1"
                android:id="@+id/btnCapNhapSua"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:layout_weight="1"
                android:id="@+id/btnHuySua"/>
        </LinearLayout>

        <Button
            android:layout_toRightOf="@+id/imgSpSua"
            android:id="@+id/btnthayanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay ảnh" />


    </RelativeLayout>
</LinearLayout>